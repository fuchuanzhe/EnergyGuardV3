<Page
    x:Class="EnergyGuardWidget.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EnergyGuardWidget"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d" Height="460" Width="500">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <Image Margin ="20" Width="200" Source="Assets/SplashScreen.png"/>
        <TextBlock Padding="0,0,0,10" Text="EnergyGuard Widget" HorizontalAlignment="Center"/>
        <TextBlock Padding="0,0,0,5" Text="Click Button to Launch EnergyGuard" HorizontalAlignment="Center"/>
        <Button x:Name="myButton" Click="MyButton_Click" HorizontalAlignment="Center">Launch</Button >
    </StackPanel>
</Page>
